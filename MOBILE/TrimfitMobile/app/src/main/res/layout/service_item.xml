<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:paddingTop="16dp"
                                                   android:paddingLeft="16dp"
                                                   android:paddingRight="16dp"
                                                   android:id="@+id/service_layout">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView

                android:textStyle="bold"
                android:text="Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/service_header"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
        <TextView
                android:text="HEHE" android:id="@+id/service_description"
                android:layout_height="wrap_content" android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/service_header"
                android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="@+id/imageView2"
        />
        <Button
                android:textColor="@color/colorWhite"
                android:background="@drawable/button_style"
                android:text="Save"
                android:textSize="10dp"
                android:layout_width="61dp"
                android:layout_height="35dp"
                android:id="@+id/service_buy"
                app:layout_constraintEnd_toEndOf="@+id/imageView2" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
        <ImageView
                android:scaleType="fitXY"
                android:layout_width="378dp"
                android:layout_height="106dp" app:srcCompat="@drawable/ic_launcher_background"
                android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.652" android:layout_marginTop="4dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>