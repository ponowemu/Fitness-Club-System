@model IEnumerable<ProductView>
@{
    int counter = 1;
}
<section class="section">
    <div class="section-header">
        <h1>@ViewData["Header"]</h1>
    </div>
    <div class="section-body">
        <div class="row">
            <div class="col-md-12">
                <a asp-controller="Product" asp-action="Add" class="btn btn-icon icon-left btn-primary mb-3 float-right " id="add-new-product"><i class="far fa-edit"></i> Nowy produkt</a>
            </div>
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Lista usług</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped" id="table-services">
                                <thead>
                                    <tr>
                                        <th class="text-center">
                                            Lp.
                                        </th>
                                        <th>Nazwa produktu</th>
                                        <th>Cena netto</th>
                                        <th>Cena brutto</th>
                                        <th>Ilość</th>
                                        <th>Przypisane tagi</th>
                                        <th>Klub</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @counter
                                            </td>
                                            <td>
                                                @item.Product_Name
                                            </td>
                                            <td>@item.Product_Net_Price zł</td>
                                            <td>@item.Product_Gross_Price zł</td>
                                            <td>@item.Product_Quantity szt.</td>

                                            <td>
                                                    @foreach (var tag in item.Category)
                                                    {
                                                        <span class="badge badge-danger">@tag.Category_Name</span>
                                                    }                                             
                                            </td>
                                            <td>
                                                <ul>
                                                    @foreach (var club in item.Club)
                                                    {
                                                        <li>@club.Club_Name ( @club.Club_Id )</li>
                                                    }
                                                </ul>
                                            </td>
                                            <td>
                                                <button class="btn btn-icon icon-left btn-danger mt-1 delete-product float-right" data-id="@item.Product_Id">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                                <a class="btn btn-icon btn-primary mr-1 icon-left mt-1 float-right" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Product_Id"><i class="fas fa-pencil-alt"></i> Edytuj</a>
                                            </td>
                                        </tr>
                                        counter++;
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




