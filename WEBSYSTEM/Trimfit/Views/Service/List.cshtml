@model IEnumerable<ServiceView>

<section class="section">
    <div class="section-header">
        <h1>@ViewData["Header"]</h1>
    </div>
    <div class="section-body">
        <div class="row">

            @foreach (var service in Model)
            {
                <div class="col-12 col-sm-6 col-md-6 col-lg-3">
                    <article class="article service">
                        <div class="article-header">
                            <div class="article-badge">
                                @foreach (var tag in service.Category)
                                {
                                    <span class="badge badge-danger">@tag.Category_Name</span>
                                }
                            </div>
                            <div class="article-image" data-background="/images/stisla/news/img08.jpg">
                            </div>

                            <div class="article-title">
                                <h2>@service.Service_Name</h2>
                            </div>
                        </div>
                        <div class="article-details">
                            <p>
                                @Html.Raw(service.Service_Description)
                            </p>
                            <div class="section-title service-price">@service.Service_Gross_Price zł</div>
                            <div class="article-cta">
                                <a asp-controller="Service" asp-action="Details" asp-route-id="@service.Service_Id" class="btn btn-primary service-readmore"> Czytaj więcej</a>
                                <a href="#" class="btn btn-busket "><i class="fas fa-shopping-cart"></i> Rezerwuj</a>
                            </div>
                        </div>
                    </article>


                </div>
            }
        </div>
    </div>

</section>


<form class="modal-part" id="modal-login-part">
    <p>Wypełnij wszystkie pola formularza i dodaj nowy grafik!</p>
    <div class="form-group">
        <label>Nazwa</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <i class="fas fa-ad"></i>
                </div>
            </div>
            <input type="text" class="form-control" placeholder="Nazwa" name="timetable_name" id="timetable_name">
        </div>
    </div>
    <div class="form-group">
        <label>Status</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <i class="fas fa-lock"></i>
                </div>
            </div>
            <select class="form-control" name="timetable_status" id="timetable_status">
                <option value="2">Szkic</option>
                <option value="1">Aktywny</option>
                <option value="0">Nieaktywny</option>
            </select>
        </div>
    </div>

</form>
