@model IEnumerable<ServiceView>

<section class="section">
    <div class="section-header">
        <h1>@ViewData["Header"]</h1>
    </div>
    <div class="section-body">
        <div class="row">

            @foreach (var service in Model)
            {
                <div class="col-12 col-sm-6 col-md-6 col-lg-3">
                    <article class="article service">
                        <div class="article-header">
                            <div class="article-badge">
                                @foreach (var tag in service.Category)
                                {
                                    <span class="badge badge-danger">@tag.Category_Name</span>
                                }
                            </div>
                            <div class="article-image" data-background="/images/stisla/news/img08.jpg">
                            </div>

                            <div class="article-title">
                                <h2>@service.Service_Name</h2>
                            </div>
                        </div>
                        <div class="article-details">
                            <p>
                                @Html.Raw(service.Service_Description)
                            </p>
                            <div class="section-title service-price">@service.Service_Gross_Price zł</div>
                            <div class="article-cta">
                                <a asp-controller="Service" asp-action="Details" asp-route-id="@service.Service_Id" class="btn btn-primary service-readmore"> Czytaj więcej</a>
                                <a href="" class="btn btn-busket book_service" data-serviceid="@service.Service_Id"><i class="fas fa-shopping-cart"></i> Rezerwuj</a>
                            </div>
                        </div>
                    </article>


                </div>
            }
        </div>
    </div>

</section>


<div class="modal fade" id="book_service_modal" tabindex="-1" role="dialog" aria-labelledby="book_service_modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Szczegóły rezerwacji</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Wybierz termin, w którym chciałbyś zrealizować usługę. Następnie sprawdzimy jej dostępność.</p>

                <div class="form-group">
                    <label>Termin</label>
                    <input type="text" class="form-control book_service_date">
                </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Sprawdź dostępność</button>
            </div>
        </div>
    </div>
</div>
